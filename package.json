{
  "name": "mcp-bricks",
  "version": "0.1.0",
  "private": true,
  "description": "Workflow automation platform similar to n8n with YAML workflow definitions, MCP integration, and custom node support",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.21.0",
  "pnpm": {
    "catalogMode": "prefer",
    "cleanupUnusedCatalogs": true
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:"
  }
}
